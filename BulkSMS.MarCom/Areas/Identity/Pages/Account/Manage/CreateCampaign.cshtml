@page
@using Microsoft.AspNetCore.Identity;
@model CreateCampignModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4></h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Numbers"></label>
                <textarea asp-for="Input.Numbers" class="form-control" rows="10" cols="100"></textarea>
                <span asp-validation-for="Input.Numbers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Message"></label>
                <textarea asp-for="Input.Message" class="form-control" rows="10" cols="100"></textarea>
                <span asp-validation-for="Input.Message" class="text-danger"></span>
            </div>
            <button type="Send" class="btn btn-default">Send</button>
            <div class="form-group">
                <span>@Model.Campaign.Response.status</span>
            </div>
            <div class="form-group">
                <b>[ERRORS]</b>
                @if (Model.Campaign.Response.errors != null)
                {
                    @foreach (var item in Model.Campaign.Response.errors)
                    {

                        <span><b>Code : </b></span>
                        <span>@item.code</span>

                        <span><b>Message :</b></span>
                        <span>@item.message</span>
                    }
                }
                </div>
                <div class="form-group">
                    <b>[WARNINGS]</b>
                    @if (Model.Campaign.Response.warnings != null)
                    {
                        foreach (var item in Model.Campaign.Response.warnings)
                        {

                        <span><b>Numbers : </b></span>
                        <span>@item.numbers</span>

                        <span><b>Message :</b></span>
                        <span>@item.message</span>
                        }
                    }

                </div>
</form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
